@{
    ViewData["Title"] = "Edit Product Page";
}
@model Product

<h1>@ViewData["Title"]</h1>

<form method="post" id="submissionForm">
    <input asp-for="product_ID" hidden><br>

    <label asp-for="name">Name:</label><br>
    <input required asp-for="name" type="text" id="name" name="name"><br>

    <label asp-for="year">Year:</label><br>
    <input required asp-for="year" type="number" id="year" name="year"><br>

    <label asp-for="num_parts">Number of Parts:</label><br>
    <input required asp-for="num_parts" type="number" id="num_parts" name="num_parts"><br>

    <label asp-for="price">Price:</label><br>
    <input required asp-for="price" type="number" id="price" name="price"><br>

    <label asp-for="img_link">Image Link:</label><br>
    <input required asp-for="img_link" type="text" id="img_link" name="img_link"><br>

    <label for="current_img">Current Image:</label><br>
    <img id="current_img" src="@(Model != null ? Model.img_link : "/path/to/default/image.jpg")" alt="No Image Loaded"><br>


    <label asp-for="primary_color">Primary Color:</label><br>
    <input required asp-for="primary_color" type="text" id="primary_color" name="primary_color"><br>

    <label asp-for="secondary_color">Secondary Color:</label><br>
    <input required asp-for="secondary_color" type="text" id="secondary_color" name="secondary_color"><br>

    <label asp-for="description">Description:</label><br>
    <textarea required asp-for="description" id="description" name="description"></textarea><br>

    <label asp-for="category">Category:</label><br>
    <select required asp-for="category" id="category" name="category">
        <option value="">Select a category</option>
        @foreach (var cat in ViewBag.categories)
        {
            <option value="@cat">@cat</option>
        }
    </select><br>

    
    <br>
    <button id="confirmSubmitButton" type="button" class="btn btn-primary" >Save Changes</button>
    
</form>
<script src="~/js/confirmSubmit.js"></script>
    

