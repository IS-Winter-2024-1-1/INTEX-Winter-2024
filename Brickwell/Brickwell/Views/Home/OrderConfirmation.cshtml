@{
    ViewData["Title"] = "Order Confirmation";
}

@model Order

<div class="container">
    <div class="card" style="color: #fafbfc;">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h1>@ViewData["Title"]</h1>
                    <img src="~/img/lego_order_confirmed.jpg" class="img-fluid rounded-circle" style="max-width:50%;" alt="Order Confirmation" />

                </div>
                <div class="col-md-6">
                    <br />
                    <br />
                    <h2>Thank you for your order!</h2>
                    <p>Your order number is @Model.transaction_ID</p>
                    <p>Your order total is @Model.amount.ToString("C")</p>
                    <p>Thank you for shopping with us!</p>
                    <a class="btn btn-primary" href="/">Return To Home</a>
                </div>
            </div>
        </div>
    </div>


    <div class="card" >
    <div class="row justify-content-center align-items-center" style="height: 100vh;">
        <div class="col-md-6 text-center text-dark">
            
        </div>
    </div>
    </div>
</div>

