

@model Product

<div class="col mb-5">
    <div class="card h-100">
        <!-- Product image-->
        <img class="card-img-top" src="@Model.img_link" alt="..."/>
        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder">@Model.name</h5>
                <!-- Product price-->
                @Model.price
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-controller="Home" asp-action="ProductDetails" asp-route-id="@Model.product_ID">View Options</a></div>
        </div>
    </div>
</div>