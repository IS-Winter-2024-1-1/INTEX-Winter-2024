

@model Product

<div class="card-deck col mb-5">
    <div class="card h-100">
        <!-- Product image-->
        <img class="card-img-top custom-card-img" src="@Model.img_link" alt="@Model.name"/>
        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder text-dark">@Model.name</h5>
                <!-- Product price-->
                $@Model.price
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><a class="btn btn-outline-dark mt-auto butn" asp-controller="Home" asp-action="ProductDetails" asp-route-id="@Model.product_ID">View Options</a></div>
        </div>
    </div>
</div>

<style>
    .butn {
        margin-top: 30px;
        margin-bottom: 30px;
        width: 150px;
        background: #83a7c9;
        color: #fff;
        transition: all 0.5s;
    }

        .butn:hover {
            background: #608bb8;
            color: #fff;
            transform: scale(1.1);
        }
</style>
